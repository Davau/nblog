<%- include common/head %>

<form class="uk-form" method="post" action="/edit/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">
	<div class="uk-form-row">
    	<input type="text" name="title" value="<%= post.title %>" disabled="disabled"  class="uk-form-large">
    </div>
	<div class="uk-form-row">
		 标签：<br />
		  <input type="text" name="tag1" value="<%= post.tags[0] %>" disabled="disabled" />
		  <input type="text" name="tag2" value="<%= post.tags[1] %>" disabled="disabled" />
		  <input type="text" name="tag3" value="<%= post.tags[2] %>" disabled="disabled" /><br />
    </div>
    <div class="uk-form-row">
   		<textarea cols="200" rows="20"  name="post"><%= post.post %></textarea>
	</div>
	<input type="submit" value="保存修改" />
</form>

<%- include common/foot %>